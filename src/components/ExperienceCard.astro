---
interface Props {
  position: string;
  company: string;
  image?: string;
  date: string;
  description: string;
}

const { position, company, date, description, image } = Astro.props;
---

<div class="w-full p-4  rounded-lg transition-all ease-in-out duration-300 flex flex-col gap-2">
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-1 mb-1">
    <h3 class="text-base lg:text-2xl font-medium tracking-wider text-accent">{position}</h3>
    <span class="text-xs lg:text-sm text-accent font-medium mt-1 lg:mt-0">{date}</span>
  </div>
  <div class="mb-2 flex flex-col lg:flex-row lg:items-center gap-4">
  {image && (
    <div class="mb-2">
      <img src={image} alt={`${company} logo`} class="h-10 lg:h-12 object-contain rounded-lg" />
    </div>
  )}
  <div class="text-primary font-medium text-sm lg:text-base mb-1">{company}</div>
</div>
  <p class="text-xs lg:text-base text-gray-300">{description}</p>
</div>
