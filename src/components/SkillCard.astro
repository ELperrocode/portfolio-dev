---
const { title, icon, color, items } = Astro.props;
---

<div class="rounded-lg  p-6  bg-white/5 border border-white/20 backdrop-blur-0
transition-all ease-in-out duration-300  hover:shadow-[0_0_15px_1px_#e3dddc]  hover:border-accent  hover:ring-accent hover:ring-offset-2">
    <div class="flex items-center mb-4">
        <i class={`${icon} text-2xl mr-2 ${color}`}></i>
        <h3 class="text-xl font-semibold text-white">{title}</h3>
    </div>
    <ul class="space-y-2">
        {items.map((item: { icon: any; color: any; name: unknown; }) => (
            <li class="flex items-center text-lg text-white">
                <i class={`${item.icon} mr-2 ${item.color}`}></i>
                <span>{item.name}</span>
            </li>
        ))}
    </ul>
</div>