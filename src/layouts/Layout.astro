---
import Navbar from "../components/Navbar.astro";
import SectionTimeline from "../components/SectionTimeline.astro";
import "@fontsource-variable/jetbrains-mono";

interface Props {
  title: string;
  description: string;
  keywords: string;
}


const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Henry Maldonado" />
    <link rel="icon" type="image/svg+xml" href="/favicon.webp" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="relative h-full w-full bg-background">
    <div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]">
    </div>
    <Navbar />
    <SectionTimeline />
    
      <slot />
   
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "JetBrains Mono Variable", monospace;
    scroll-behavior: smooth;
    scroll-padding-top: 64px;
  }

  body {
    background-color: #161516;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  section {
    min-height: fit-content;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

 
</style>